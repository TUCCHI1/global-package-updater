{
  "tasks": {
    "start": "deno run --allow-run --allow-write src/main.ts",
    "test": "deno test --allow-run",
    "compile": "deno compile --allow-run --allow-write src/main.ts"
  },
  "fmt": {
    "files": {
      "include": [
        "src/",
        "tests/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always"
    }
  },
  "lint": {
    "files": {
      "include": [
        "src/",
        "tests/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "importMap": "import_map.json"
}
